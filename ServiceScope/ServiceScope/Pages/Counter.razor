@page "/counter"
@inject IOperationTransient OperationTransient;
@inject IOperationScoped OperationScoped;
@inject IOperationSingleton OperationSingleton;


<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<div style="background-color: bisque">
    Transient: @OperationTransient.OperationId
</div>

<div style="background-color:azure ">
    Scoped: @OperationScoped.OperationId
</div>

<div style="background-color: aqua">
    Singleton: @OperationSingleton.OperationId
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
